{
    "require": {
        "tightenco/jigsaw": "^1.3",
        "samdark/sitemap": "^2.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "App\\Listeners\\": "listeners/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "format": [
            "./vendor/bin/php-cs-fixer fix --config .php_cs"
        ]
    }
}
